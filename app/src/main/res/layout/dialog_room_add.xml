<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/dialogRL"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        >

        <RelativeLayout
            android:id="@+id/titleRL"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/dialog_title_bg"
            >
            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:textColor="@color/white"
                android:text="新增聊天室"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/contentRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleRL"
            >
            <RelativeLayout
                android:id="@+id/roomNameRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/roomNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="名稱"
                    />
                <RelativeLayout
                    android:id="@+id/nameEditRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/roomNameTitle"
                    android:layout_marginTop="5dp"
                    android:background="@color/cover_bg_20"

                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    >
                    <EditText
                        android:id="@+id/roomnameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyEditTextTheme"
                        android:layout_marginTop="5dp"
                        android:hint="(必填)"
                        />
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomNameRL"
                >
                <TextView
                    android:id="@+id/descNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="說明"
                    />
                <RelativeLayout
                    android:id="@+id/descEditRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/descNameTitle"
                    android:layout_marginTop="5dp"
                    android:background="@color/cover_bg_20"

                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    >
                    <EditText
                        android:id="@+id/descET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyEditTextTheme"
                        android:layout_marginTop="5dp"
                        android:hint="(必填)"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnRL"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/contentRL"
            >
            <LinearLayout
                android:id="@+id/btnLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/negativeButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="取消"
                    />
                <Button
                    android:id="@+id/positiveButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="確定"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>